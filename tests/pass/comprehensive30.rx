const HEAP_SIZE: usize = 1024;
const BLOCK_HEADER_SIZE: i32 = 2;
const FREE_FLAG: i32 = 0;
const USED_FLAG: i32 = 1;

fn main() {
    let mut heap: [i32; HEAP_SIZE] = [0; HEAP_SIZE];
